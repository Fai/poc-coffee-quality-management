# Coffee Quality Management Platform - Environment Variables
# Copy this file to .env and fill in the values

# Environment (development, production)
CQM_ENVIRONMENT=development

# Server
CQM__SERVER__PORT=3000
CQM__SERVER__HOST=0.0.0.0

# Database
CQM__DATABASE__URL=postgres://postgres:postgres@localhost:5432/coffee_qm_dev
CQM__DATABASE__MAX_CONNECTIONS=10
CQM__DATABASE__MIN_CONNECTIONS=2

# JWT Authentication
CQM__JWT__SECRET=your-secret-key-change-in-production
CQM__JWT__ACCESS_TOKEN_EXPIRY=3600
CQM__JWT__REFRESH_TOKEN_EXPIRY=604800

# LINE Integration
CQM__LINE__CHANNEL_ID=
CQM__LINE__CHANNEL_SECRET=
CQM__LINE__MESSAGING_TOKEN=

# AWS Configuration
CQM__AWS__REGION=ap-southeast-1
CQM__AWS__S3_BUCKET=coffee-qm-dev
CQM__AWS__AI_DETECTION_ENDPOINT=
CQM__AWS__AI_DETECTION_API_KEY=

# Weather API
CQM__WEATHER__API_ENDPOINT=
CQM__WEATHER__API_KEY=
